extends  ../layout
block content
    .container
        .row
            form.form-horizontal(method="post",action="/movie/new")
                .form-group
                    label.col-sm-3.control-label(for="inputTitle") 电影名称
                    .col-sm-10
                        input#inputTitle.form-control(type="text",name="movie[title]")
                    label.col-sm-3.control-label(for="inputDoctor") 导演
                    .col-sm-10
                        input#inputTitle.form-control(type="text",name="movie[doctor]")
                    label.col-sm-3.control-label(for="inputCountry") 国家
                    .col-sm-10
                        input#inputTitle.form-control(type="text",name="movie[country]")
                    label.col-sm-3.control-label(for="inputLanguage") 语言
                    .col-sm-10
                        input#inputTitle.form-control(type="text",name="movie[language]")
                    label.col-sm-3.control-label(for="inputYear") 上映年份
                    .col-sm-10
                        input#inputTitle.form-control(type="text",name="movie[year]")
                    label.col-sm-3.control-label(for="inputSummary") 简介
                    .col-sm-10
                        input#inputTitle.form-control(type="text",name="movie[summary]")
                    label.col-sm-3
                    .col-sm-10
                        button.btn.btn-primary.del(type="button") 提交

