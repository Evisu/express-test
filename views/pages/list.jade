extends  ../layout
block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 电影名称
                        th 图片
                        th 简介
                        th 导演
                        th 国家
                        th 语言
                        th 上映年份
                        //-th 录入时间
                        th 查看
                        th 修改
                        th 删除
                tbody
                    each item in movies
                        tr(class="item-id-#{item._id}")
                            td #{item.title}
                            td
                                thumbnail
                                a(href="/details/#{item._id}")
                                img(src="#{item.poster}",alt="#{item.title}")
                            td #{item.summary}
                            td #{item.doctor}
                            td #{item.country}
                            td #{item.language}
                            td #{item.year}
                            //-td #{item.meta.createAt}
                            td
                                a(target="_blank",href="../movie/#{item._id}") 查看
                            td
                                a(target="_blank",href="../admin/update/#{item._id}") 修改
                            td
                                button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除

